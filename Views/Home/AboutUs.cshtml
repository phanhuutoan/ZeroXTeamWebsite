<section class="w3l-team">
  <div class="team py-5">
    <div class="container py-lg-5">
      
      <div class="header-section text-center mx-auto">
        <h6 class="sub-title mb-3">Our Team Members</h6>
        <h3>Các thành viên của ZeroX</h3>
        <p class="my-3"> 
          Đội ngũ đứng đằng sau ZeroX là những con người tâm huyết, được lựa chọn kĩ càng. 
        </p>
      </div>

      <div class="row team-row pt-3 mt-5">
        <!-- end team member -->

        @foreach (var member in members)
        {
          <div class="col-lg-3 col-sm-6 team-wrap mt-sm-0 pt-sm-0 pt-2" style="margin-top: 2rem !important">
            <div class="team-info">
              <div class="column position-relative img-circle">
                <a asp-action="MemberDetail" asp-controller="Home" asp-route-id="@member.Id">
                  <img src="@member?.PhotoUrl" alt="url" class="img-fluid team-image" />
                </a>
              </div>
              <div class="column-btm">
                <h3 class="name-pos">
                  <a asp-action="MemberDetail" asp-controller="Home" asp-route-id="@member.Id">
                    @member?.Name
                  </a>
                </h3>
                <p>@member?.TeamTitles</p>
                <div class="social">
                <a href="@member?.Facebook" class="facebook" target="blank">
                  <span class="fa fa-facebook" aria-hidden="true"></span>
                </a>
                <a href="mailto:@member?.Email?Subject=Hello" class="twitter" target="blank">
                  <span class="fa fa-envelope" aria-hidden="true"></span>
                </a>
              </div>
              </div>
            </div>
          </div>            
        }

        <!-- end team member -->
      </div>
    </div>
</section>
<hr style="margin: 0">
