@{
  var isAuth = User.Identity.IsAuthenticated;
}

<div class="container text-center" style="margin-top: 3rem;">
  @if (isAuth)
  {
    <h2>Welcome back! My Boss 😀 </h2>      
  }

  @if (TempData["ValidError"] != null)
  {
    <div class="alert alert-danger mb-4" style="width: 30rem; margin: 0 auto">
      <h4>
        @TempData["ValidError"]
      </h4>
    </div>
  }
  
  @if (!isAuth)
  {
    <div>
      <h2>Hey man, do you have an admin account 🐯 ??</h2>
      <h4>Don't have any account please click here</h4>
      <a 
        class="btn btn-primary btn-lg mt-4" 
        asp-controller="AdminHome" asp-action="register">
        Sign up
      </a>
    </div>      
  }

</div>